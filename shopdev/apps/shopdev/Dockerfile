# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build shopdev`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t shopdev`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system shopdev && \
          adduser --system -G shopdev shopdev

COPY dist/apps/shopdev shopdev/
RUN chown -R shopdev:shopdev .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix shopdev --omit=dev -f install

CMD [ "node", "shopdev" ]
